
@{
    ViewBag.Title = "Pet Owner, or Pet Carer?";
}

<body class="container-fluid chooseRole_hero">
    <h2>@ViewBag.Title</h2>

    <div class="row">
        <div class="col-md-1"><!--spaceholder--></div>

        <div class="col-md-10">
            <p>
                Thanks for registering with us! To make the most out of this site,
                you need to determine if you will be using this site as a pet owner,
                or a pet care provider. If you plan on being both, that's fine too.
                You'll be able to change this at any time, so no pressure!
            </p>
        </div>

        <div class="col-md-1"><!--spaceholder--></div>
    </div><!-- end 1st row -->


    <div class="row">
        <div class="col-sm-3">
            <div class="pick_buttons">
                @Html.ActionLink("I am a pet owner!", "Create", "PetOwners")
            </div>
        </div>

        <div class="col-sm-3">
            <div class="pick_buttons">
                @Html.ActionLink("I want to be a pet care provider!", "Create", "CareProviders")
            </div>
        </div>

        <div class="col-sm-3">
            <div class="pick_buttons">      <!-- TODO: This form will be changed-->
                @Html.ActionLink("I want to be both!", "Create", "PetOwners") 
            </div>
        </div>

        <div class="col-sm-3">
            <div class="pick_buttons">
                @Html.ActionLink("I want to pick later...", "Index", "ProfilePage")
            </div>
        </div>
    </div><!-- end 2nd row -->

</body><!-- end chooseRole_hero div -->
