@model Petopia.Models.ViewModels.CareTransactionViewModel

@{
    ViewBag.Title = "Index -- All Pet Care Appointments (Transactions)";
    ViewBag.Title02 = "View for Admin + Petopia Staff";
}

<div class="container-fluid">

    <span style="float:right; padding-right:5px; padding-top:15px;">
        @Html.ActionLink("Book a new Pet Care Appointment!", "BookAppointment")
    </span>
    <h2>@ViewBag.Title:</h2>
    <h4><i>@ViewBag.Title02</i></h4>

    <table class="table">
        <tr>
            <!--==========================================================================-->
            <th>
                Pet Name
            </th>
            <th>
                Owners Name
            </th>
            <!--==========================================================================-->
            <th>
                Providers Name
            </th>
            <!--==========================================================================-->
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <!--==========================================================================-->
            <th></th>
        </tr>

        @foreach (var item in Model.IndexInfoList)
        {
            <tr>
                <!--==========================================================================-->
                <td>
                    @Html.DisplayFor(model => item.PetName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.PetOwnerFirstName) @Html.DisplayFor(model => item.PetOwnerLastName)
                </td>
                <!--==========================================================================-->
                <td>
                    @Html.DisplayFor(model => item.PetProviderFirstName) @Html.DisplayFor(model => item.PetProviderLastName)
                </td>
                <!--==========================================================================-->
                <td>
                    @Html.DisplayFor(model => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.EndDate)
                </td>
                <!--==========================================================================-->
                <td>
                    @Html.ActionLink("Edit Appt", "EditAppointment",
                                                new { id = item.TransactionID }) <hr />
                    @Html.ActionLink("Appt Details", "AppointmentDetails", 
                                                new { id = item.TransactionID }) <hr />
                    @Html.ActionLink("Cancel Appt", "Delete", 
                                                new { id = item.TransactionID }) <hr />
                    @Html.ActionLink("Complete Appt", "CompleteAppointment", 
                                                new { id = item.TransactionID })
                </td>
                <!--==========================================================================-->
            </tr>
        }
    </table>
</div><!-- END CONTAINER-FLUID -->
